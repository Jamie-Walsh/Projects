<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:background="#000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Title"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="BarGenie"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Spinner
            android:id="@+id/spin"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="@drawable/dropdown"
            android:dropDownWidth="100dp"
            android:dropDownHorizontalOffset="100dp"
            android:dropDownVerticalOffset="60dp"
            android:paddingTop="2sp"
            android:paddingBottom="2dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:layout_marginLeft="345dp"
            android:id="@+id/imageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dropdown" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/CoverPhoto"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/cover" />

    <TextView
        android:id="@+id/PubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CoverPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Pub Name"
        android:textColor="#ffffff"
        android:textSize="37dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PubTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="1dp"
        android:text="Address: "
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PubTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="211dp"
        android:layout_marginLeft="211dp"
        android:layout_marginTop="1dp"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Open"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PubTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="36dp"
        android:text="Open Times: "
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Location"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="1dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/mFood"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PubTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="103dp"
        android:text="Serve Food: "
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PubTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="71dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Ratingz"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PubTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="137dp"
        android:text="Rating: "
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Cost"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PubTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="68dp"
        android:text="Price Range: "
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Rating"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PubTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="209dp"
        android:layout_marginLeft="209dp"
        android:layout_marginTop="137dp"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Food"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PubTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="104dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <Button
        android:id="@+id/Rate"
        android:layout_width="164dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="0dp"
        android:text="Rate This Pub" />

    <Button
        android:id="@+id/Back"
        android:layout_width="164dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="209dp"
        android:layout_marginLeft="209dp"
        android:layout_marginBottom="0dp"
        android:text="Back" />

</RelativeLayout>