<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:background="#000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Title"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="BarGenie"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Spinner
            android:id="@+id/spin"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="@drawable/dropdown"
            android:dropDownWidth="100dp"
            android:dropDownHorizontalOffset="100dp"
            android:dropDownVerticalOffset="60dp"
            android:paddingTop="2sp"
            android:paddingBottom="2dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:layout_marginLeft="345dp"
            android:id="@+id/imageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dropdown" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/main"
        android:scaleType="fitEnd" />

    <TextView
        android:id="@+id/WelcomeBackground2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="70dp"
        android:text="Welcome"
        android:textColor="#000000"
        android:textSize="61dp" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:text="Welcome"
        android:textColor="#ffff05"
        android:textSize="61dp" />

    <ImageButton
        android:id="@+id/LoginImage"
        android:layout_width="210dp"
        android:layout_height="350dp"
        android:layout_below="@+id/imageView2"
        android:background="@drawable/login"
        android:scaleType="fitEnd" />

    <TextView
        android:id="@+id/LoginBackground"
        android:layout_width="wrap_content"
        android:layout_height="143dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="445dp"
        android:text="Login\nHere"
        android:textColor="#000000"
        android:textSize="61dp" />

    <TextView
        android:id="@+id/LogHere"
        android:layout_width="wrap_content"
        android:layout_height="143dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="442dp"
        android:text="Login\nHere"
        android:textColor="#ffff05"
        android:textSize="61dp" />

    <ImageButton
        android:id="@+id/PubImage"
        android:layout_width="225dp"
        android:layout_height="350dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="196dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/whelans"
        android:scaleType="fitEnd" />

    <TextView
        android:id="@+id/PubBackground"
        android:layout_width="200dp"
        android:layout_height="143dp"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="320dp"
        android:text="View\nPubs"
        android:textColor="#000000"
        android:textSize="61dp" />

    <TextView
        android:id="@+id/ViewPubs"
        android:layout_width="250dp"
        android:layout_height="143dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="315dp"
        android:text="View Pubs"
        android:textColor="#ffff05"
        android:textSize="61dp" />

</RelativeLayout>